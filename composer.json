{
    "name": "darkghosthunter/captchavel",
    "description": "Easily integrate Google Recaptcha v3 into your Laravel application",
    "keywords": [
        "darkghosthunter",
        "captchavel",
        "laravel",
        "recaptcha",
        "google"
    ],
    "homepage": "https://github.com/darkghosthunter/captchavel",
    "license": "MIT",
    "type": "library",
    "authors": [
        {
            "name": "Italo Baeza Cabrera",
            "email": "darkghosthunter@gmail.com",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^7.1.3",
        "ext-json" : "*",
        "google/recaptcha": "^1.2",
        "illuminate/config": "6.*",
        "illuminate/container": "6.*",
        "illuminate/http": "6.*",
        "illuminate/routing": "6.*",
        "illuminate/support": "6.*",
        "illuminate/validation": "6.*",
        "illuminate/view": "6.*"
    },
    "require-dev": {
        "orchestra/testbench": "4.*"
    },
    "autoload": {
        "files": [
            "src/helpers.php"
        ],
        "psr-4": {
            "DarkGhostHunter\\Captchavel\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "DarkGhostHunter\\Captchavel\\Tests\\": "tests"
        }
    },
    "scripts": {
        "test": "vendor/bin/phpunit",
        "test-coverage": "vendor/bin/phpunit --coverage-html coverage"

    },
    "config": {
        "sort-packages": true
    },
    "extra": {
        "laravel": {
            "providers": [
                "DarkGhostHunter\\Captchavel\\CaptchavelServiceProvider"
            ],
            "aliases": {
                "ReCaptcha": "DarkGhostHunter\\Captchavel\\ReCaptcha"
            }
        }
    }
}
